<!DOCTYPE html>
<html>
<head>
  <title>foodudes</title>
  <%= include_gon %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class='nav_logo'><%= link_to '', users_path %><%= image_tag 'foodudes_logo_raw.png', :size => '161x45' %></div>
    <% if current_user %>
      <ul class='control-panel'>
        <li><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#recommend">Recommend</button>
        </li>
        <li><%= link_to 'My Favorite', auth_sign_out_path, :class => 'btn btn-info' %></li>
        <li><%= link_to 'SignOut', auth_sign_out_path, :method => :delete, :class => 'btn btn-warning' %></li>
        <li><%= image_tag current_user.image , size: "35x35" %>
        <%= current_user.name %></li>
      </ul>
    <% else %>
      <div class='fb_login'><%= link_to 'facebook LogIn', "/auth/facebook", :class => 'btn btn-primary' %></div>
    <% end %>
  </nav>
  <div id="map"></div>
  <%= yield %>
</body>
</html>
