<!DOCTYPE html>
<html>
<head>
  <title>foodudes</title>
  <%= include_gon %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=places"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='control_panel'>
    <nav>
      <% if current_user %>
      <div class='nav_logo'>
        <%= image_tag 'foodudes_logo_raw.png', :size => '161x45' %>
        <div>
          <%= link_to '登出', auth_sign_out_path, :method => :delete, :class => 'btn btn-default' %>
          <!--<%= image_tag current_user.image , size: "35x35" %> 
          <%= current_user.name %> -->
        </div>
      </div>
      <ul class='find_food'>
        <h2>找美食</h2>
        <form class='form-inline'>  
          <li>
            <input id="gmaps-place" type='text' class='form-control'/>
          </li>
        </form>
      </ul>
      <% else %>
        <div class='fb_login'><%= link_to 'facebook LogIn', "/auth/facebook", :class => 'btn btn-default' %></div>
      <% end %>
    </nav>
  </div>
  <div class='food_info'>
    <div class="X">X</div>
    <button type="button" class="recommend btn btn-default btn-lg">推薦</button>
    <h2>餐廳資訊</h2>
    <ul class="food_info_content">
    </ul>
  </div>
  <div id="gmaps"></div>
  <%= yield %>
</body>
</html>
