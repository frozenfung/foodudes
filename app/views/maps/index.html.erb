
<% if current_user %>
<%= form_for @recommend, :url => restaurants_path do |rc| %>
    <%= fields_for @restaurant do |r| %>
      <%= r.text_field :name, :class => 'form_name_info' %>
      <%= r.text_field :address, :class => 'form_address_info' %>
      <%= r.text_field :lat, :class => 'form_lat_info' %>
      <%= r.text_field :lng, :class => 'form_lng_info' %>
    <% end %>
    <%= rc.text_field :content, :class => 'form_content_info' %>
<% end %> 
<% end %>